<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:minHeight="65dp"
    android:background="#ffffff"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

       >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.mrg.sxpiyun.widget.YuanBitmap
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:id="@+id/img_xiaoxilist_touxiang"
                android:src="@drawable/faceback_head"
                android:layout_marginTop="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="4.08">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="16"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="消息内容预览dssssssssssssssssssssssssssssssssssssssssssssss"
                android:textColor="#9b9999"
                android:id="@+id/tv_xiaoxilist_xxkan"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/tv_xiaoxilist_title"
                android:layout_alignStart="@+id/tv_xiaoxilist_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="11"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="联系人名字qqqqqqqqqqqqqqqqqqq"
                android:id="@+id/tv_xiaoxilist_title"
                android:textSize="20dp"
                android:textColor="#000000"

                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp"
                android:layout_above="@+id/tv_xiaoxilist_xxkan"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <com.mrg.sxpiyun.widget.BadgeView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_xiaoxilist_newxx"
                android:layout_below="@+id/tv_xiaoxilist_title"
                android:layout_alignRight="@+id/tv_xiaoxilist_time"
                android:layout_alignEnd="@+id/tv_xiaoxilist_time" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:textColor="#9b9999"
                android:id="@+id/tv_xiaoxilist_time"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:layout_alignTop="@+id/tv_xiaoxilist_title"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_xiaoxilist_username"
                android:layout_above="@+id/tv_xiaoxilist_xxkan"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>